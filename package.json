{
  "name": "ourchizukan",
  "description": "おうちの大切な瞬間を記録する家族のずかん",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:sources": "next build",
    "build:scripts": "esbuild styles/scripts/*.ts --outdir=public/scripts --bundle --minify",
    "production:build": "dotenv -e .env.production -- npm run cloudflare:env && npx @cloudflare/next-on-pages",
    "production:preview": "npm run production:build && wrangler pages dev",
    "production:deploy": "npm run production:build && wrangler pages deploy",
    "dev": "next dev --turbopack",
    "build": "run-s build:scripts build:sources",
    "start": "next start",
    "cloudflare:env": "wrangler types",
    "package:deps": "ncu",
    "package:update": "ncu -i",
    "package:update:force": "ncu -u",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "biome": "biome check",
    "biome:fix": "biome check --write",
    "lint": "run-p eslint biome",
    "format": "run-p eslint:fix biome:fix",
    "tsc": "tsc --noEmit",
    "ci": "run-p format tsc cloudflare:env"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.5.0",
    "@hookform/resolvers": "^5.0.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "hono": "^4.7.9",
    "http-status-codes": "^2.3.0",
    "lucide-react": "^0.510.0",
    "next": "15.3.2",
    "nextjs-toploader": "^3.8.16",
    "react": "^19.1.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.56.3",
    "react-use": "^17.6.0",
    "tailwind-merge": "^3.3.0",
    "tw-animate-css": "^1.2.9",
    "uuid": "^11.1.0",
    "zod": "^3.24.4",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/next-on-pages": "^1.13.12",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.25.4",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-unicorn": "^59.0.1",
    "npm-check-updates": "^18.0.1",
    "npm-run-all": "^4.1.5",
    "shiki": "^3.4.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.14.4"
  }
}
