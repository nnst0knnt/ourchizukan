{
  "name": "ourchizukan",
  "description": "おうちの大切な瞬間を記録する家族のずかん",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build:scripts": "esbuild styles/scripts/*.ts --outdir=public/scripts --bundle --minify",
    "build": "npm run cloudflare:env && npm run build:scripts && next build",
    "deploy:dry-run": "opennextjs-cloudflare build && opennextjs-cloudflare deploy --dry-run",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "start": "next start",
    "cloudflare:env": "wrangler types",
    "package:deps": "ncu",
    "package:update": "ncu -i",
    "package:update:force": "ncu -u",
    "analyze": "ANALYZE=true next build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "biome check",
    "format:fix": "biome check --write",
    "tsc": "tsc --noEmit",
    "ci": "run-s cloudflare:env && run-p lint:fix format:fix tsc",
    "db:generate": "drizzle-kit generate --name",
    "db:push": "APP_DEBUG=false drizzle-kit push --config ./drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config ./drizzle.config.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@hookform/resolvers": "^5.2.1",
    "@opennextjs/cloudflare": "^1.6.5",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.15",
    "drizzle-orm": "^0.44.5",
    "es-toolkit": "^1.39.10",
    "hono": "^4.9.4",
    "http-status-codes": "^2.3.0",
    "lucide-react": "^0.542.0",
    "next": "15.5",
    "nextjs-toploader": "^3.8.16",
    "react": "^19.1.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.62.0",
    "react-use": "^17.6.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.7",
    "uuid": "^11.1.0",
    "zod": "^4.1.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.9",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-unicorn": "^60.0.0",
    "npm-check-updates": "^18.0.3",
    "npm-run-all": "^4.1.5",
    "shiki": "^3.12.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.33.0"
  }
}
