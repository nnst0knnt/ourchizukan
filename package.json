{
  "name": "ourchizukan",
  "description": "おうちの大切な瞬間を記録する家族のずかん",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build:scripts": "esbuild styles/scripts/*.ts --outdir=public/scripts --bundle --minify",
    "build": "npm run cloudflare:env && npm run build:scripts && opennextjs-cloudflare build",
    "preview": "npm run build:scripts && opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "npm run build:scripts && opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "upload": "npm run build:scripts && opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "start": "next start",
    "cloudflare:env": "wrangler types",
    "package:deps": "ncu",
    "package:update": "ncu -i",
    "package:update:force": "ncu -u",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "biome": "biome check",
    "biome:fix": "biome check --write",
    "lint": "run-p eslint biome",
    "format": "run-p eslint:fix biome:fix",
    "tsc": "tsc --noEmit",
    "ci": "run-p format tsc cloudflare:env"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "@hookform/resolvers": "^5.0.1",
    "@opennextjs/cloudflare": "^1.2.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "hono": "^4.7.11",
    "http-status-codes": "^2.3.0",
    "lucide-react": "^0.513.0",
    "next": "15.3.3",
    "nextjs-toploader": "^3.8.16",
    "react": "^19.1.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.57.0",
    "react-use": "^17.6.0",
    "tailwind-merge": "^3.3.0",
    "tw-animate-css": "^1.3.4",
    "uuid": "^11.1.0",
    "zod": "^3.25.53",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.25.5",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-n": "^17.19.0",
    "eslint-plugin-unicorn": "^59.0.1",
    "npm-check-updates": "^18.0.1",
    "npm-run-all": "^4.1.5",
    "shiki": "^3.6.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.19.1"
  }
}
