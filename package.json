{
  "name": "ourchizukan",
  "description": "おうちの大切な瞬間を記録する家族のずかん",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:sources": "next build",
    "build:scripts": "esbuild styles/scripts/*.ts --outdir=public/scripts --bundle --minify",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:preview": "npm run pages:build && wrangler pages dev",
    "pages:deploy": "npm run pages:build && wrangler pages deploy",
    "package:deps": "ncu",
    "package:update": "ncu -i",
    "package:update:force": "ncu -u",
    "cloudflare:env": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "dev": "next dev --turbopack",
    "build": "run-s build:scripts build:sources",
    "start": "next start",
    "eslint": "next lint",
    "eslint:fix": "next lint --fix",
    "biome": "biome check",
    "biome:fix": "biome check --write",
    "lint": "run-p eslint biome",
    "format": "run-p eslint:fix biome:fix",
    "tsc": "tsc --noEmit",
    "ci": "run-p format tsc"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "lucide-react": "^0.487.0",
    "next": "15.2.4",
    "nextjs-toploader": "^3.8.16",
    "react": "^19.1.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "tailwind-merge": "^3.1.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/next-on-pages": "^1.13.12",
    "@cloudflare/workers-types": "^4.20250404.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "esbuild": "^0.25.2",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unicorn": "^58.0.0",
    "npm-check-updates": "^17.1.16",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vercel": "^41.4.1",
    "wrangler": "^4.7.1"
  }
}
