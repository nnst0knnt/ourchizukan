{
  "name": "ourchizukan",
  "description": "おうちの大切な瞬間を記録する家族のずかん",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build:scripts": "esbuild styles/scripts/*.ts --outdir=public/scripts --bundle --minify",
    "build": "npm run cloudflare:env && npm run build:scripts && next build",
    "preview": "npm run build:scripts && opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "npm run build:scripts && opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "upload": "npm run build:scripts && opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "start": "next start",
    "cloudflare:env": "wrangler types",
    "package:deps": "ncu",
    "package:update": "ncu -i",
    "package:update:force": "ncu -u",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "biome": "biome check",
    "biome:fix": "biome check --write",
    "lint": "run-p eslint biome",
    "format": "run-p eslint:fix biome:fix",
    "tsc": "tsc --noEmit",
    "ci": "run-p format tsc cloudflare:env"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@hookform/resolvers": "^5.2.1",
    "@opennextjs/cloudflare": "^1.6.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "hono": "^4.8.10",
    "http-status-codes": "^2.3.0",
    "lucide-react": "^0.534.0",
    "next": "15.4.5",
    "nextjs-toploader": "^3.8.16",
    "react": "^19.1.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.61.1",
    "react-use": "^17.6.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6",
    "uuid": "^11.1.0",
    "zod": "^4.0.13",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dotenv-cli": "^10.0.0",
    "esbuild": "^0.25.8",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-unicorn": "^60.0.0",
    "npm-check-updates": "^18.0.2",
    "npm-run-all": "^4.1.5",
    "shiki": "^3.8.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.26.1"
  }
}
